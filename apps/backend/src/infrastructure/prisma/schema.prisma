datasource db {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["prismaSchemaFolder"]
}

model User {
  id               String  @id
  createdAt        String
  updatedAt        String
  firstName        String
  lastName         String
  email            String  @unique
  password         String
  salt             String
  verificationCode String
  role             Int
  tempPassword     String  @default("")
  isVerified       Boolean @default(false)
  isDeleted         Boolean @default(false)
}

model Roles {
  id        Int     @id @default(autoincrement())
  role      String
  isDeleted  Boolean @default(false)
  deletedAt String?
}
